@{
    ViewData["Title"] = "C贸digo QR del Usuario";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-qrcode"></i> C贸digo QR - @ViewBag.User.Name
                    </h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <img src="@ViewBag.QrImageBase64" 
                             alt="C贸digo QR" 
                             class="img-fluid" 
                             style="max-width: 300px; border: 1px solid #ddd; border-radius: 8px;">
                    </div>
                    
                    <div class="mb-3">
                        <p class="text-muted">
                            <strong>Usuario:</strong> @ViewBag.User.Name<br>
                            <strong>Email:</strong> @ViewBag.User.Email<br>
                            <strong>C贸digo QR:</strong> @ViewBag.User.QrCode
                        </p>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a href="@Url.Action("DownloadQr", new { id = ViewBag.User.Id })" 
                           class="btn btn-success">
                            <i class="fas fa-download"></i> Descargar QR
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
