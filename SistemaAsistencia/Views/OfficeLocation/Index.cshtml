@model IEnumerable<SistemaAsistencia.Models.OfficeLocation>
@{
    ViewData["Title"] = "Ubicaciones de Oficina";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-map-marker-alt me-2"></i>@ViewData["Title"]</h1>
        <div class="d-grid gap-2 d-md-flex">
            <a asp-action="Create" class="btn btn-success btn-modern">
                <i class="fas fa-plus me-2"></i>Nueva Ubicación
            </a>
            <a asp-action="SetCurrentLocation" class="btn btn-primary btn-modern">
                <i class="fas fa-location-arrow me-2"></i>Configurar desde GPS
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered modern-table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th class="d-none d-md-table-cell">Coordenadas</th>
                        <th class="d-none d-sm-table-cell">Radio (m)</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold">@Html.DisplayFor(modelItem => item.Name)</div>
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <small class="text-muted">@Html.DisplayFor(modelItem => item.Description)</small>
                                }
                            </td>
                            <td>
                                <div>@Html.DisplayFor(modelItem => item.Address)</div>
                                <small class="text-muted d-md-none">
                                    @item.Latitude.ToString("F6"), @item.Longitude.ToString("F6")
                                </small>
                            </td>
                            <td class="d-none d-md-table-cell">
                                <small>
                                    <strong>Lat:</strong> @item.Latitude.ToString("F6")<br>
                                    <strong>Lng:</strong> @item.Longitude.ToString("F6")
                                </small>
                            </td>
                            <td class="d-none d-sm-table-cell">
                                <span class="badge bg-info">@Html.DisplayFor(modelItem => item.RadiusMeters)m</span>
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Activa</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactiva</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group-vertical btn-group-sm d-md-none" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mb-1">
                                        <i class="fas fa-eye"></i> Ver
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm mb-1">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> Eliminar
                                    </a>
                                </div>
                                <div class="btn-group btn-group-sm d-none d-md-flex" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> <span class="d-none d-lg-inline">Ver</span>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> <span class="d-none d-lg-inline">Editar</span>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i> <span class="d-none d-lg-inline">Eliminar</span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="modern-card">
                <div class="card-body">
                    <i class="fas fa-map-marker-alt fa-3x text-muted mb-3"></i>
                    <h4>No hay ubicaciones configuradas</h4>
                    <p class="text-muted">Configura la primera ubicación de oficina para habilitar la validación GPS.</p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a asp-action="Create" class="btn btn-success btn-modern">
                            <i class="fas fa-plus me-2"></i>Crear Primera Ubicación
                        </a>
                        <a asp-action="SetCurrentLocation" class="btn btn-primary btn-modern">
                            <i class="fas fa-location-arrow me-2"></i>Configurar desde GPS
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


